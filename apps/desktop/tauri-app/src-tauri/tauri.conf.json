{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PromptLens",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "pnpm --prefix ../web build",
    "frontendDist": "../web/dist"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.promptlens.desktop"
    },
    "windows": [
      {
        "title": "PromptLens Desktop",
        "resizable": true,
        "fullscreen": false,
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
