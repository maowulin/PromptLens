{
  "name": "promptlens-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev:web": "pnpm -C apps/web-client dev --host 0.0.0.0 --port 5173",
    "dev:desktop": "pnpm -C apps/desktop/tauri-app tauri dev",
    "build": "cargo build --workspace && pnpm -C apps/web-client build",
    "bundle": "pnpm -C apps/desktop/tauri-app tauri build",
    "fmt": "cargo fmt --all",
    "lint": "cargo clippy --workspace",
    "test": "cargo test --workspace"
  }
}
